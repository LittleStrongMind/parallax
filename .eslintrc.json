{
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "globals": {
    "google": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-dupe-class-members": 0,
    "indent": ["error", 4],
    "no-console": 0,
    "no-useless-escape": 0,

    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
